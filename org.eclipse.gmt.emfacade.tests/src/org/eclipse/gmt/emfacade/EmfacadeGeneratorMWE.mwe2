module org.eclipse.gmt.emfacade.EmfacadeGeneratorMWE

import org.eclipse.emf.mwe.utils.*

var targetDir = "src-gen"
var modelPath = "src/org/eclipse/gmt/emfacade/swt"

Workflow {

	bean = StandaloneSetup {
 		registerGeneratedEPackage = "org.eclipse.gmt.emfacade.EmfacadePackage"
	}

//    component = DirectoryCleaner {
//	    directory = "${targetDir}/org/eclipse/gmt/emfacade/tests/binders_gen"
//    }
	
	component = org.eclipse.xtext.mwe.Reader {
		// lookup all resources on the classpath
//		useJavaClassPath = true

		// or define search scope explicitly
		path = modelPath
		uriFilter = org.eclipse.xtext.mwe.NameBasedFilter {
			regularExpression = "swt\\.xef"
			extension = "xef"
		}
		// this class will be generated by the xtext generator 
		register = org.eclipse.gmt.EmfacadeStandaloneSetup {}
		loadResource = {
			slot = "model"
		}
	}

	component = org.eclipse.xtext.generator.GeneratorComponent {
		register = org.eclipse.gmt.EmfacadeStandaloneSetup {}
		slot = 'model'
		outlet = {
			path = targetDir
		}
	}
}
